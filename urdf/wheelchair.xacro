<?xml version='1.0'?>

<robot name="wheelchair" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Motor, Camera and Lidar Simulation -->
	<xacro:include filename="$(find wheelchair)/urdf/wheelchair.gazebo" />

	<xacro:property name="robot_name" value="wheelchair" />
	<xacro:property name="robot_chassis_mass" value="30"/>
	<xacro:property name="middle_wheel_mass" value="3"/>
	<xacro:property name="middle_wheel_radius" value="0.13"/>
	<xacro:property name="rear_wheel_radius" value="0.06"/>
	

	<!-- Make Chassis of Bot -->
	<link name="chassis">
		<pose>0 0 0.1 0 0 0</pose>

		<inertial>
			<mass value="${robot_chassis_mass}"/>
      		<origin xyz="0.35 0.29 0.2" rpy=" 0 0 0"/>

      		<inertia 
      			ixx="0.147116667" ixy="0" ixz="0"
      			iyy="0.334951167" iyz="0"
      			izz="0.3978345"
      		/>
		</inertial>

		<collision name="collision">
			<origin xyz="0.35 0.29 0.2" rpy=" 0 0 0"/>
			<geometry>
				<box size="0.614 0.38 0.165"/>
			</geometry>
		</collision>

		<visual name="chassis_visual">
			<origin xyz="0 0 0" rpy=" 0 0 0"/>
			<geometry>
                <mesh filename="package://wheelchair/meshes/wheelchair_chassis.dae"/>
			</geometry>

		</visual>

	</link>

	<!-- Left Wheel -->
	<link name="left_wheel">
		<inertial>
		<mass value="${middle_wheel_mass}"/>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<inertia
			ixx="0.1" ixy="0.0" ixz="0.0"
			iyy="0.1" iyz="0.0"
			izz="0.1"
		/>
		</inertial>

		<collision>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<geometry>
			<cylinder radius="${middle_wheel_radius}" length="0.05"/>
		</geometry>
		</collision>

		<visual>
		<origin xyz="-0.52 -0.525 -0.1275" rpy="0 0 0"/>
		<geometry>
			<mesh filename="package://wheelchair/meshes/middle_wheel_left.dae"/>
		</geometry>
		</visual>

	</link>

	<!-- Right Wheel -->
	<link name="right_wheel">
		<inertial>
		<mass value="${middle_wheel_mass}"/>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<inertia
			ixx="0.1" ixy="0.0" ixz="0.0"
			iyy="0.1" iyz="0.0"
			izz="0.1"
		/>
		</inertial>

		<collision>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<geometry>
			<cylinder radius="${middle_wheel_radius}" length="0.05"/>
		</geometry>
		</collision>

		<visual>
		<origin xyz="-0.52 -0.05 -0.1275" rpy="0 0 0"/>
		<geometry>
			<mesh filename="package://wheelchair/meshes/middle_wheel_right.dae"/>
		</geometry>
		</visual>

	</link>

	<!-- Right Wheel Back -->
	<link name="right_wheel_back">
		<inertial>
		<mass value="1"/>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<inertia
			ixx="0.1" ixy="0.0" ixz="0.0"
			iyy="0.1" iyz="0.0"
			izz="0.1"
		/>
		</inertial>

		<collision>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<geometry>
			<cylinder radius="${rear_wheel_radius}" length="0.03"/>
		</geometry>
		</collision>

		<visual>
		<origin xyz="-0.06 -0.055 -0.062" rpy="0 0 0"/>
		<geometry>
			<mesh filename="package://wheelchair/meshes/right_wheel_back.dae"/>
		</geometry>
		</visual>

	</link>

	<!-- Left Wheel Back -->
	<link name="left_wheel_back">
		<inertial>
		<mass value="1"/>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<inertia
			ixx="0.1" ixy="0.0" ixz="0.0"
			iyy="0.1" iyz="0.0"
			izz="0.1"
		/>
		</inertial>

		<collision>
		<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
		<geometry>
			<cylinder radius="${rear_wheel_radius}" length="0.03"/>
		</geometry>
		</collision>

		<visual>
		<origin xyz="-0.06 -0.525 -0.062" rpy="0 0 0"/>
		<geometry>
			<mesh filename="package://wheelchair/meshes/left_wheel_back.dae"/>
		</geometry>
		</visual>

	</link>

	<!-- Project center to the ground -->
	<link name="robot_footprint"></link>



	<!-- ******** Define Joints ********** -->

	<joint name="robot_footprint_joint" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0" />
		<parent link="robot_footprint"/>
		<child link="chassis" />
	</joint>

	<joint type="continuous" name="left_wheel_hinge_front">
		<origin xyz="0.52 0.525 0.1275" rpy="0 0 0" />
		<parent link="chassis"/>
		<child link="left_wheel" />
		<axis xyz="0 1 0" rpy="0 0 0" />
		<limit effort="10000" velocity="1000" />
		<dynamics damping="1.0" friction="1.0" />
  	</joint>

	<joint type="continuous" name="right_wheel_hinge_front">
		<origin xyz="0.52 0.05 0.1275" rpy="0 0 0" />
		<parent link="chassis"/>
		<child link="right_wheel" />
		<axis xyz="0 1 0" rpy="0 0 0" />
		<limit effort="10000" velocity="1000" />
		<dynamics damping="1.0" friction="1.0" />
  	</joint>

	<joint type="continuous" name="right_wheel_hinge_back">
		<origin xyz="0.06 0.055 0.062" rpy="0 0 0" />
		<parent link="chassis"/>
		<child link="right_wheel_back" />
		<axis xyz="0 1 0" rpy="0 0 0" />
		<limit effort="10000" velocity="1000" />
		<dynamics damping="1.0" friction="1.0" />
  	</joint>

	  <joint type="continuous" name="left_wheel_hinge_back">
		<origin xyz="0.06 0.525 0.062" rpy="0 0 0" />
		<parent link="chassis"/>
		<child link="left_wheel_back" />
		<axis xyz="0 1 0" rpy="0 0 0" />
		<limit effort="10000" velocity="1000" />
		<dynamics damping="1.0" friction="1.0" />
  	</joint>

</robot>